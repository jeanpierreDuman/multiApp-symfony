{% extends 'base.html.twig' %}

{% block title %}Liste des factures{% endblock %}

{% block titleLook %}Facture{% endblock %}

{% block body %}
<div class="thirteen wide column">
    <div class="ui card max-width">
        <div class="content">
            <div class="header">
                Liste des factures
            </div>
        </div>
        <div class="content">
            <table id="table-invoice-transform" class="ui celled table" style="width: 100%">
                <thead>
                    <tr>
                        <th>Num√©ro de facture</th>
                        <th>Client</th>
                        <th>Date</th>
                        <th>Total HT</th>
                        <th>Tva</th>
                        <th>Total TTC</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            getDatatable('#table-invoice-transform', '{{ path('datatable_invoice_transform') }}',[
                {data: 'num'},
                {data: 'customer'},
                {data: 'date'},
                {data: 'amountHt'},
                {data: 'tva'},
                {data: 'amountTtc'},
                {data: function(data) {
                    return "<a target='_blank' class='ui button teal aligned' href='" + data.link + "'>voir</a>";
                }, orderable: false
            }
            ]);
        });
    </script>
{% endblock %}
